<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Background Image (FULL & CLEAR) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/bg_department"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <!-- Content Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FDFDFD"
            android:elevation="6dp">

            <TextView
                android:id="@+id/title"
                android:text="Department Management System"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:text="VIEW STUDENTS"
                android:onClick="showStudents"
                android:backgroundTint="#29B6F6"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:text="VIEW STAFF ADVISORS"
                android:onClick="showStaff"
                android:layout_marginTop="10dp"
                android:backgroundTint="#66BB6A"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Students -->
            <LinearLayout
                android:id="@+id/studentLayout"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Arun"
                    android:onClick="studentArun"
                    android:backgroundTint="#FF7043"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:text="Divya"
                    android:onClick="studentDivya"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#AB47BC"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Staff -->
            <LinearLayout
                android:id="@+id/staffLayout"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Dr. Kumar"
                    android:onClick="staffKumar"
                    android:backgroundTint="#5C6BC0"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:text="Dr. Meena"
                    android:onClick="staffMeena"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#26A69A"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/details"
                android:text="Details will appear here"
                android:textSize="17sp"
                android:textColor="#263238"
                android:background="#FAFAFA"
                android:padding="16dp"
                android:layout_marginTop="25dp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
